--TEST--
Can loop using function call in condition
--FILE--
var num = 1;

func compare() {
    println("Comparing " + string(num) + " < 10");
    return num < 10;
}

while (compare()) {
    println(num);
    num++;
}

println("Done");
--EXPECT--
